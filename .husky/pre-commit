#!/bin/sh

# Check for dependency issues
echo "ğŸ” Checking dependencies..."
pnpm check-deps
if [ $? -ne 0 ]; then
  echo "âŒ Dependency check failed. Please fix the issues before committing."
  echo "   You can run 'pnpm fix-deps' to automatically fix some issues."
  exit 1
fi
echo "âœ… Dependencies check passed!"

# Run lint-staged on staged files only
echo "ğŸ” Running lint-staged on staged files..."
pnpm lint-staged
if [ $? -ne 0 ]; then
  echo "âŒ Lint-staged failed. Please fix the issues before committing."
  exit 1
fi
echo "âœ… Lint-staged passed!"

echo "ğŸ‰ All checks passed! Proceeding with commit..."
