{
  "name": "@musetrip360/ui-core",
  "version": "0.1.0",
  "description": "A comprehensive UI component library for MuseTrip360 built on the design system",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles": {
      "import": "./dist/styles.css",
      "require": "./dist/styles.css"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly --declaration --outDir dist",
    "build:watch": "vite build --watch",
    "dev": "vite build --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "clean": "rm -rf dist",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@musetrip360/eslint-config": "workspace:*",
    "@musetrip360/tsconfig": "workspace:*",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "typescript": "^5",
    "@eslint/eslintrc": "^3",
    "eslint": "^9",
    "typescript-eslint": "^8.32.0",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^3.7.0",
    "vitest": "^3.1.4"
  },
  "dependencies": {
    "@musetrip360/design-system": "workspace:*",
    "@tailwindcss/vite": "^4.1.8",
    "tailwindcss": "^4.1.8",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "react-icons": "^5.0.1"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/musetrip360-app.git",
    "directory": "packages/ui-core"
  },
  "keywords": [
    "musetrip360",
    "museum",
    "react",
    "typescript",
    "ui",
    "components"
  ],
  "author": "MuseTrip360 Team",
  "license": "MIT"
}
