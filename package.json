{
  "name": "musetrip360-app",
  "private": true,
  "version": "0.0.1",
  "description": "MuseTrip360 - A comprehensive platform for museums and exhibitions",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "watch-packages": "turbo run dev --filter='./packages/*'",
    "start": "turbo run build && turbo run start --filter='./apps/*'",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "lint-staged": "lint-staged",
    "preinstall": "npx only-allow pnpm",
    "check-deps": "manypkg check",
    "fix-deps": "manypkg fix",
    "clean": "turbo run clean && rm -rf node_modules",
    "test": "turbo run test",
    "prepare": "husky"
  },
  "devDependencies": {
    "@manypkg/cli": "^0.24.0",
    "@types/node": "^20",
    "eslint": "^9",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.0",
    "tsup": "^8.0.1",
    "turbo": "^2.5.2",
    "typescript": "^5"
  },
  "manypkg": {
    "ignoredRules": [
      "EXTERNAL_MISMATCH"
    ]
  },
  "packageManager": "pnpm@10.11.0+sha512.6540583f41cc5f628eb3d9773ecee802f4f9ef9923cc45b69890fb47991d4b092964694ec3a4f738a420c918a333062c8b925d312f42e4f0c263eb603551f977",
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/manhhaycode/musetrip360-app"
  }
}
